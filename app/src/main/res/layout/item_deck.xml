<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_background"
            android:padding="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tier"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tier_a_background"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:text="Tier S"
                    android:textColor="#FF8000"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:padding="2dp"/>

                <ImageView
                    android:id="@+id/region_1_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/region_1"
                    android:layout_marginRight="5dp"
                    tools:srcCompat="@drawable/icon_shadowisles" />
                <ImageView
                    android:id="@+id/region_2_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/region_2"
                    android:layout_marginRight="5dp"
                    tools:srcCompat="@drawable/icon_demacia" />

                <TextView
                    android:id="@+id/region_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/region_2_icon"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"
                    android:text="Region1"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/region_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:text="Region2"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:text="Title"
                android:textSize="20dp"
                android:textColor="?attr/textcolor"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/hero_1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@drawable/hero_vi"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/hero_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@id/hero_1"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@drawable/hero_heimerdinger"
                    android:layout_toEndOf="@id/hero_1" />

                <ImageView
                    android:id="@+id/type_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@id/type"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    tools:srcCompat="@drawable/icon_aggro"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/type" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Type"
                    android:textSize="24dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="?attr/type_text"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>